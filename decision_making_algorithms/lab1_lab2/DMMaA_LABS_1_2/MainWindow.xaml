<Window x:Class="DMMaA_LABS_1_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DMMaA_LABS_1_2"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="DMMaA Labs 1/2" Height="450" Width="800" MinWidth="800" MinHeight="450">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Border Grid.Column="3" Grid.Row="1" BorderBrush="LightGray" BorderThickness="3">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <TextBlock FontSize="15" TextAlignment="Center" FontFamily="Times New Roman" Grid.Row="0" Margin="6"
                           Grid.ColumnSpan="4">
                    Количество точек
                </TextBlock>
                <Slider IsSnapToTickEnabled="True" Name="DotsSlider" Grid.Row="1" Margin="5" Grid.ColumnSpan="3"
                        Minimum="1000" Maximum="100000" SmallChange="1" Value="1000" TickPlacement="BottomRight" FontFamily="Times New Roman" />
                <TextBlock Grid.Row="1" Grid.Column="5" Margin="5" Text="{Binding ElementName=DotsSlider,Path=Value}" />
                <TextBlock FontSize="15" TextAlignment="Center" FontFamily="Times New Roman" Grid.Row="2" Margin="6"
                           Grid.ColumnSpan="4">
                    Количество классов
                </TextBlock>
                <Slider IsSnapToTickEnabled="True" Name="ClassesSlider" Grid.Row="5" Margin="5" Grid.ColumnSpan="3"
                        Minimum="2" Maximum="20" SmallChange="1" Value="2" TickPlacement="BottomRight" FontFamily="Times New Roman"/>
                <TextBlock Grid.Row="5" Grid.Column="5" Margin="5"
                           Text="{Binding ElementName=ClassesSlider,Path=Value}" />
            </Grid>
        </Border>
        <Border Grid.Column="3" Grid.Row="0" BorderBrush="LightGray" BorderThickness="3">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" FontSize="15" TextAlignment="Center" FontFamily="Times New Roman" Margin="6">Выбор алгоритма</TextBlock>
                <RadioButton Name="RadioButtonKAverage" GroupName="LabMethod" Grid.Row="1" Margin="8" IsChecked="True"
                             Click="RadioButtonKAverage_OnClick" FontFamily="Times New Roman">
                    K-средних
                </RadioButton>
                <RadioButton Name="RadioButtonMaxMin" GroupName="LabMethod" Grid.Row="2" Margin="8"
                             Click="RadioButtonMaxMin_OnClick" FontFamily="Times New Roman">
                    Максимин
                </RadioButton>
                <RadioButton Name="RadioButtonMaxMinAverage" GroupName="LabMethod" Grid.Row="3" Margin="8"
                             Click="RadioButtonMaxMinAverage_OnClick" FontFamily="Times New Roman">
                    Максимин + К-средних
                </RadioButton>
            </Grid>
        </Border>
        <Border Grid.Column="3" Grid.Row="2" BorderBrush="LightGray" BorderThickness="3">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Row="0" Grid.ColumnSpan="5" FontSize="15" TextAlignment="Center" FontFamily="Times New Roman"
                           Margin="6">
                    Обработка
                </TextBlock>
                <Button Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="3" Margin="9" Name="ButtonProcessing"
                        Click="ButtonProcessing_OnClick" FontFamily="Times New Roman">
                    Рассчитать
                </Button>
            </Grid>
        </Border>
        <Border Name="BorderImage" Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="0" Grid.RowSpan="3">
            <Image Name="Canvas"/>
        </Border>

    </Grid>
</Window>